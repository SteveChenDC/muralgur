<p id="notice"><%= notice %></p>


<p class="picture text-center">
  <%= image_tag(@picture.url, width: "650", class: "img-zoom", data_zoom_image: @picture.url) %>
</p>

<h1 class="text-center">
  <!-- <strong>Mural Name:</strong> -->
  <%= @picture.name %>
</h1>

<p class="description">
  <strong>Description:</strong>
  <%= @picture.description %>
</p>

<p class="tags text-center">
  <strong>Tag:</strong>
  <%= @picture.tag %>
</p>

<%= link_to 'Edit', edit_picture_path(@picture) %> |
<%= link_to 'Back', pictures_path %>
